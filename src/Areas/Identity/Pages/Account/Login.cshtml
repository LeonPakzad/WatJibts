@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="form-container">

    <form id="account" method="post">


        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-field">
            <label class="form-label"        asp-for="Input.Email" >Email</label>
            <input class="form-control" asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span  class="form-error"   asp-validation-for="Input.Email"></span>
        </div>

        <div class="form-field">
            <label class="form-label"        asp-for="Input.Password">Password</label>
            <input class="form-control" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span  class="form-error"   asp-validation-for="Input.Password"></span>
        </div>

        <div class="form-field">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe" class="form-label">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>

        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </form>
</div>

